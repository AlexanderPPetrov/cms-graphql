{
    "entryFile": "src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/**/*Controller.ts"
    ],
    "spec": {
        "outputDirectory": "build",
        "specVersion": 3,
        "basePath": "/api"
    },
    "routes": {
        "basePath": "/api",
        "routesDir": "build"
    },
    "ignore": [
        "src/helpers"
    ]
}
